<section>
    <h1>Blog</h1>
    <% if (posts.length===0) { %>
        <p>No posts yet.</p>
        <% } else { %>
            <ul class="post-list">
                <% posts.forEach(p=> { %>
                    <li class="post-card">
                        <h3><a href="/blog/<%= p.slug %>">
                                <%= p.title %>
                            </a></h3>
                        <small>
                            <%= new Date(p.published_at).toLocaleDateString() %>
                        </small>
                        <% if (p.excerpt) { %>
                            <p>
                                <%= p.excerpt %>
                            </p>
                            <% } %>
                    </li>
                    <% }) %>
            </ul>
            <% } %>
</section>