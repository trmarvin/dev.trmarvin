<!-- views/partials/project-card.ejs -->
<article class="project-card">
    <a class="project-media" href="/projects/<%= project.slug %>">
        <% if (project.thumbnail_url) { %>
            <img src="<%= project.thumbnail_url %>" alt="<%= project.title %> thumbnail">
            <% } %>
    </a>
    <div class="project-body">
        <h3 class="project-title">
            <a href="/projects/<%= project.slug %>">
                <%= project.title %>
            </a>
        </h3>
        <% if (project.summary) { %>
            <p class="project-summary">
                <%= project.summary %>
            </p>
            <% } %>
                <% if (project.tags) { %>
                    <ul class="project-tags">
                        <% (Array.isArray(project.tags) ? project.tags : String(project.tags).split(',')).slice(0,
                            3).forEach(t=> { %>
                            <li>
                                <%= String(t).trim() %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>
    </div>
</article>