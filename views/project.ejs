<!-- views/project.ejs -->
<main class="container">
    <a href="/projects">‚Üê Back to projects</a>
    <h1>
        <%= project.title %>
    </h1>

    <% if (project.thumbnail_url) { %>
        <img src="<%= project.thumbnail_url %>" alt="<%= project.title %> thumbnail">
        <% } %>

            <% if (project.excerpt) { %>
                <p>
                    <%= project.excerpt %>
                </p>
                <% } %>
                    <% if (project.body) { %>
                        <div class="prose"><%- project.body %></div>
                        <% } %>
</main>